@model IEnumerable<Shift>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-2">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-primary">Shift Times</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Shift" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &ensp; Create New Shift
            </a>
        </div>
    </div>
</div>
<br />

<table class="table tabel-bordered table-striped" style="width: 100%"> 
    <thead>
        <tr>
            <th>
                Shift name
            </th>
            <th>
                Start Time
            </th>
            <th>
                End Time
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <partial name="_Sidebar" />
        @foreach(var obj in Model)
        {
            <tr>
                <td width="25%">
                    @obj.Name
                </td>
                <td width="25%">
                    @obj.StartTime
                </td>
                <td width="25%">
                    @obj.EndTime
                </td>
                <td>
                    <div class="w-80 btn-group" role="group">
                        <a asp-controller="Shift" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Shift" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>   
<a asp-area="Admin" asp-controller="Dashboard" asp-action="Settings"
   class="btn btn-light" style="width: 99%">
    Back to Settings
</a>