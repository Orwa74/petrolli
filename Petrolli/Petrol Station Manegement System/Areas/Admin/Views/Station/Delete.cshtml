@model Station

<partial name="_Sidebar" />
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <br />
    <br />
    <h2 class="text-primary">Are you sure?</h2>
    <p>You won't be able to revert this!</p>
    <table class="table tabel-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Location
                </th>
                <th>
                    Address
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Email
                </th>
                
        </thead>
        <tbody>
            
                <tr>
                    <td width="10%">
                     @Model.Name
                    </td>
                     <td width="20%">
                      @Model.Location
                    </td>
                    <td width="20%">
                     @Model.Address
                    </td>
                    <td width="20%">
                     @Model.Phone
                    </td>
                    <td width="20%">
                     @Model.Email
                     </td>
                </tr>
            
            

        </tbody>
    </table>
    <a asp-controller="Station" asp-action="Index" class="btn btn-light" style="width: 49%">
        Back to Station information
        </a>
    <button type="submit" class="btn btn-danger" style="width:50%">Yes, delete it!</button>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}