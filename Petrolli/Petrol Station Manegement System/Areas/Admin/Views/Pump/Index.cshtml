@model IEnumerable<Pump>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Sidebar" />
<div class="container p-2">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-primary">Fuel Pumps</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Pump" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &ensp; Create New Fuel Pump
            </a>
        </div>
    </div>
    <br />

</div>


<table  class="table tabel-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Pump Code
            </th>
            <th>
                Fuel Type
            </th>
            <th>
                Current Meter
            </th>
            <th>
                Status
            </th>
            <th>
                Tank
            </th>
            <th>
                
            </th>
            
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="15%">
                    @obj.PumpCode
                </td>
                <td width="15%">
                    @if (obj.FuelType != null)
                    {
                        @obj.FuelType.Fuel_Type
                    }
                   
                </td>
                <td width="15%">
                    @obj.CurrerntMeter
                </td>
                <td width="15%">
                    @obj.Status
                </td>
                <td width="15%">
                    @if (obj.Tank != null)
                    {
                        @obj.Tank.TankName
                    }
                </td>
                <td >
                    <div class="w-80 btn-group" role="group">
                        <a asp-controller="Pump" asp-action="Upsert" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Pump" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        
    </tbody>
</table>   
<a asp-area="Admin" asp-controller="Dashboard" asp-action="Settings"
   class="btn btn-light" style="width: 99%">
    Back to Settings
</a>
