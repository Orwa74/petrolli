@model FuelType

<partial name="_Sidebar" />
<form method="post" asp-action="Edit">
    <br />
    <div action="border p-3 mt-4">
        <div class="row pb-2">
            <br />
            <h2 class="text-primary">Edit Fuel Type</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Fuel_Type"></label>
            <input asp-for="Fuel_Type" class="form-control" color="black" />
            <span asp-validation-for="Fuel_Type" class="text-danger"></span>
        </div>
        <a asp-controller="FuelType" asp-action="Index" class="btn btn-light" style="width: 49%">
            Back to Fuel List
        </a>
        <button type="submit" class="btn btn-primary" style="width:50%">Update</button>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}
