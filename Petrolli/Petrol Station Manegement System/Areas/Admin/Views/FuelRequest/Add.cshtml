@model PetrolStation.Models.ViewModels.FuelRequestVM

<partial name="_Sidebar" />
<form method="post" asp-action="Add">
    <br />
    <div action="border p-3 mt-4">
        <div class="row pb-2">
            <br />
            <h2 class="text-primary">New Feul Request</h2>
            <p class="text-danger">Enter The Informations Carfully You Can't Edit it</p>
            <hr />
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="FuelRequest.FuelTypeId"></label>
            <select asp-for="FuelRequest.FuelTypeId" asp-items="@Model.FuelTypeList" class="form-select">
                <option disabled selected>--Select Fuel Type--</option>
            </select>
            <span asp-validation-for="FuelRequest.FuelTypeId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FuelRequest.Amount"></label>
            <input asp-for="FuelRequest.Amount" class="form-control" color="black" />
            <span asp-validation-for="FuelRequest.Amount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FuelRequest.SupplierId"></label>
            <select asp-for="FuelRequest.SupplierId" asp-items="@Model.SupplierList" class="form-select">
                <option disabled selected>--Select Supplier--</option>
            </select>
            <span asp-validation-for="FuelRequest.SupplierId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FuelRequest.Notes"></label>
            <textarea asp-for="FuelRequest.Notes" class="form-control" rows="4" color="black"></textarea>
            <span asp-validation-for="FuelRequest.Notes" class="text-danger"></span>
        </div>
        <a asp-controller="FuelRequest" asp-action="Index" class="btn btn-light" style="width: 49%">
            Back to Requests List
        </a>
        <button type="submit" value="Send" class="btn btn-primary" style="width:50%">Add</button>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}
