@model PetrolStation.Models.ViewModels.TankVM

<partial name="_Sidebar" />
<form method="post" asp-action="Upsert">
    <input asp-for="Tank.Id" hidden />
    <div action="border p-3 mt-4">
        <div class="row pb-2">
            <br />
            <h2 class="text-primary">@(Model.Tank.Id!=0?"Update": "Create") Tank</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Tank.FuelTypeId"></label>
            <select asp-for="Tank.FuelTypeId" asp-items="@Model.FuelTypeList" class="form-select">
                <option disabled selected>--Select Fuel Type--</option>
            </select>
            <span asp-validation-for="Tank.FuelTypeId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Tank.TankName"></label>
            <input asp-for="Tank.TankName" class="form-control" color="black" />
            <span asp-validation-for="Tank.TankName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Tank.Capacity"></label>
            <input asp-for="Tank.Capacity" class="form-control" color="black" />
            <span asp-validation-for="Tank.Capacity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Tank.Current_Quantity"></label>
            <input asp-for="Tank.Current_Quantity" class="form-control" color="black" />
            <span asp-validation-for="Tank.Current_Quantity" class="text-danger"></span>
        </div>
        <a asp-controller="Tank" asp-action="Index" class="btn btn-light" style="width: 49%">
            Back to Tanks List
        </a>
        @if (Model.Tank.Id != 0)
        {
            <button type="submit" class="btn btn-primary" style="width:50%">Update</button>

        }
        else
        {
            <button type="submit" onclick="return ValidateInput()" class="btn btn-primary" style="width:50%">Create</button>

        }
        
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}
