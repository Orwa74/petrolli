@model IEnumerable<Supplier>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-2">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-primary">Suppliers</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Supplier" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &ensp; Create New Supplier
            </a>
        </div>
    </div>
</div>
<br />

<table class="table tabel-bordered table-striped" style="width: 100%"> 
    <thead>
        <tr>
            <th>
                Supplier name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <partial name="_Sidebar" />
        @foreach(var obj in Model)
        {
            <tr>
                <td width="15%">
                    @obj.Name
                </td>
                <td width="20%">
                    @obj.Email
                </td>
                <td width="20%">
                    @obj.PhoneNumber
                </td>
                <td width="20%">
                    @obj.Address
                </td>
                <td>
                    <div class="w-80 btn-group" role="group">
                        <a asp-controller="Supplier" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Supplier" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>   