@model User

<partial name="_Sidebar" />
<form method="post">
    <br />
    <div action="border p-3 mt-4">
        <div class="row pb-2">
            <br />
            <h2 class="text-primary">Create User</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" color="black" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" color="black" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" color="black" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <a asp-controller="User" asp-action="Index" class="btn btn-light" style="width: 49%">
            Back to User List
        </a>
        <button type="submit" class="btn btn-primary" style="width:50%">Create</button>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}
