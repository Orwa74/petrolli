@model IEnumerable<Crowding>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Sidebar" />
<div class="container p-2">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-primary">Crowding Time List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Crowding" asp-action="Upsert" class="btn btn-primary">
                Update Crowding
            </a>
        </div>
    </div>
    <br />

</div>


<table  class="table tabel-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Fuel Type
            </th>
            <th>
                Crowding level
            </th>
            <th>
                Last Update
            </th>
            
            <th>
                
            </th>
            
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="25%">
                    @obj.FuelType.Fuel_Type
                </td>
                <td width="25%">
                    @obj.Level
                </td>
                <td width="25%">
                    @obj.LastUpdate
                </td>
                
                <td >
                    <div class="w-50 btn-group" role="group">
                        <a asp-controller="Crowding" asp-action="Upsert" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Update
                        </a>
                       
                    </div>
                </td>
            </tr>
        }
        
    </tbody>
</table>   

